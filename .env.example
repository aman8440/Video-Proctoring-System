# Backend Environment Variables
NODE_ENV=development
PORT=5000
MONGODB_URI=mongodb://localhost:27017/video_proctoring
FRONTEND_URL=http://localhost:5173

# JWT Secret (generate a strong secret in production)
JWT_SECRET=your_jwt_secret_key_here

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# CORS Settings
CORS_ORIGIN=http://localhost:5173

# Socket.IO Settings
SOCKET_CORS_ORIGIN=http://localhost:5173

# Database Settings
DB_HOST=localhost
DB_PORT=27017
DB_NAME=video_proctoring

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Settings
SESSION_TIMEOUT=3600000

# AI Model Settings (if using external APIs)
# TENSORFLOW_API_KEY=your_api_key
# MEDIAPIPE_API_KEY=your_api_key